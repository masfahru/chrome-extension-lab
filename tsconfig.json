{
    "compilerOptions": {
        "strict": true,
        "target": "ESNext",
        "module": "ESNext",
        "moduleResolution": "bundler",
        "esModuleInterop": true,
        "sourceMap": false,
        "noEmit": true,
        "jsx": "react-jsx",
        "typeRoots": [ "node_modules/@types" ],
        "skipLibCheck": true,
        "isolatedModules": true,
            "baseUrl": ".",
            "paths": {
                "@/*": ["./*"]
            }
    },
    "include": ["src", "vite.config.ts"],
    "exclude": ["node_modules", "dist"]
}